mixin meta(a = {})
  meta(charset="UTF-8")
  meta(name="viewport" content="width=device-width, initial-scale=1.0")

  - const robots = a.robots !== undefined ? a.robots : 'index, follow';
  <meta name="robots" content="#{robots}">

  <meta name="darkreader-lock">

  //- ico (32x32)
  <link rel="icon shortcut" href="/paste/assets/logo-light-256x256.ico" sizes="32x32">
  //- svg (light)
  <link rel="icon" href="/paste/assets/logo-light.svg" type="image/svg+xml">
  //- svg (dark)
  //- <link rel="icon" href="/paste/assets/logo-light.svg" type="image/svg+xml" media="(prefers-color-scheme: dark)">
  //- png (16x16)
  <link rel="icon" href="/paste/assets/logo-light-16x16.png" type="image/png" sizes="16x16">
  //- png (32x32)
  <link rel="icon" href="/paste/assets/logo-light-32x32.png" type="image/png" sizes="32x32">
  //- png (180x180)
  <link rel="apple-touch-icon" href="/paste/assets/logo-light-180x180.png" sizes="180x180">

  <link fetchpriority="low" href="/paste/assets/site.webmanifest" rel="manifest">

  - const title = a.title !== undefined ? a.title : 'Zeta Paste';
  title=title

  - const desc = a.desc !== undefined ? a.desc : 'Some description';
  <meta name="description" content="#{desc}">

  - const keywords = a.keywords
  if keywords !== undefined
    <meta name="keywords" content="#{keywords}">

  - const canonical = a.canonical;
  if canonical !== undefined
    <link rel="canonical" href="#{canonical}" itemprop="url">
    <meta property="og:url" content="#{canonical}">

  - const hreflang_ru = a.hreflang_ru;
  - const hreflang = a.hreflang;
  if hreflang !== undefined
    <link rel="alternate" hreflang="en" href="#{hreflang}">
    <link rel="alternate" hreflang="ru" href="#{hreflang_ru}">

  <meta property="og:title" content="#{title}">
  <meta property="og:description" content="#{desc}">
  <meta property="og:type" content="website">
  <meta itemprop="name" content="#{title}">
  <meta itemprop="description" content="#{desc}">
  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content="#{title}">
  <meta name="twitter:description" content="#{desc}">

  - const image = a.image;
  - const image_alt = a.image_alt
  if image !== undefined
    <meta property="og:image" content="#{image}">
    <meta name="twitter:image" content="#{image}">
    <meta property="og:image:alt" content="#{image_alt}">
    <meta name="twitter:image:alt" content="#{image_alt}">

  - const twitter_site = a.twitter_site;
  if twitter_site !== undefined
    <meta name="twitter:site" content="#{twitter_site}">

  - const twitter_creator = a.twitter_creator;
  if twitter_creator !== undefined
    <meta name="twitter:creator" content="#{twitter_creator}">
    

//- How to use -
  block meta
    +meta({
      robots: "index, follow",
      title: "My Awesome Title",
      desc: "Yo!",
      keywords: "key,words",
      canonical: "some url, if this param exists - work",
      hreflang: "link to english page, if this param exist - work",
      hreflang_ru: "link to ru page",
      image: "some image, if this param exists - work",
      image_alt: "some image alt, thinking...",
      twitter_site: "twitter:site",
      twitter_creator: "twitter:creator",
    })